<resources>
    <!-- Thema Base de la App. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colores de la App. -->
        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryDark">@color/celeste_oscuro</item>
        <item name="colorAccent">@color/rosa</item>
        <item name="android:fontFamily">@font/fuentes</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!--tema de calendario-->
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/celeste_oscuro</item>
        <item name="colorAccent">@color/celeste</item>
    </style>
    <!--theme color alerdialog-->
    <style name="progrescolor" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/celeste_oscuro</item>
        <item name="android:progressBackgroundTint">@color/rosa</item>
        <item name="android:textColor">@color/primario_text</item>
        <item name="android:background">@color/icono</item>
    </style>
    <!--flat buton-->
    <style name="flat_buton_rosa" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/rosa_ligth</item>
        <item name="colorButtonNormal">@color/bgactivity</item>
    </style>
    <!--buton normal-->
    <style name="material_buton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/celeste_oscuro</item>
        <item name="colorButtonNormal">@color/celeste</item>
    </style>
    <!--flat buton celeste-->
    <style name="flat_buton_celeste" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/celeste_light</item>
        <item name="colorButtonNormal">@color/icono</item>
    </style>
    <!--flat buton celeste-->
    <style name="flat_buton_secundary" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/secondario_text</item>
        <item name="colorButtonNormal">@color/icono</item>
    </style>
</resources>
