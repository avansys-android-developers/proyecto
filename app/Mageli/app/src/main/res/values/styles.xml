<resources>

    <!-- Thema Base de la App. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colores de la App. -->
        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryDark">@color/celeste_oscuro</item>
        <item name="colorAccent">@color/rosa</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/celeste_oscuro</item>
        <item name="colorAccent">@color/celeste</item>
    </style>
</resources>
