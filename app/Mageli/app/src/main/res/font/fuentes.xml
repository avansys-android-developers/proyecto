<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <font android:font="@font/roboto_bold"
        android:fontStyle="normal"
        app:font="@font/roboto_bold"
        app:fontStyle="normal"
        tools:targetApi="o" />

    <font android:font="@font/roboto_light"
        android:fontStyle="normal"
        app:font="@font/roboto_bold"
        app:fontStyle="italic"
        tools:targetApi="o" />

    <font android:font="@font/roboto_medium"
        android:fontStyle="normal"
        app:font="@font/roboto_bold"
        app:fontStyle="italic"
        tools:targetApi="o" />

    <font android:font="@font/roboto_regular"
        android:fontStyle="normal"
        app:font="@font/roboto_bold"
        app:fontStyle="normal"
        tools:targetApi="o" />

</font-family>