<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CitaActivity">
        <include layout="@layout/mi_toolbar"
        android:id="@+id/toolbar_cita"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/margenDerechoIzquierdo"
            android:paddingEnd="@dimen/margenDerechoIzquierdo">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/pediatra"
                    android:hint="Asunto cita"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:drawablePadding="5dp"
                    android:gravity="top"
                    android:drawableStart="@drawable/pediatra"
                    android:hint="DescripciÃ³n de la Cita"
                    android:inputType="text|textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />
            </android.support.design.widget.TextInputLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="space_between">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="50%"
                    app:layout_alignSelf="flex_start"
                    android:layout_marginEnd="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/card"
                        android:hint="Fecha"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexBasisPercent="45%"
                    android:layout_marginStart="5dp"
                    app:layout_alignSelf="flex_end">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/card"
                        android:hint="Hora"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
            </com.google.android.flexbox.FlexboxLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/casa"
                    android:hint="Numero de Personas"
                    android:inputType="textPostalAddress" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btn_cita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padingTopBotom"
                android:background="@color/celeste_oscuro"
                android:text="Guardar cita"
                android:textAllCaps="false"
                android:textColor="@color/icono"
                android:layout_marginBottom="@dimen/padingTopBotom"/>
        </LinearLayout>

</LinearLayout>